.chat-group-form
  %h1 新規チャットグループ
  = form_for @group, html: {id: "new_chat_group", class: "new_chat_group"} do |f|
    .chat-group-form__field.clearfix
    .chat-group-form__field--left
      f.label :name,"グループ名", html: {class: "chat-group-form__label"}
    .chat-group-form__field--right
      f.text_field,placeholder:"グループ名を入力してください", html: {id: "chat_group_name",class: "chat-group-form__input"}
    .chat-group-form__field.clearfix
    .chat-group-form__field--left
      f.label :name, "チャットメンバーを追加", html: {class: "chat-group-form__label"}
    .chat-group-form__field--right
      = f.collection_check_boxes(:user_ids, User.all, :id, :name) do |b|
        = b.label { b.check_box + b.text}
  .chat-group-form__field.clearfix
    .chat-group-form__field--left
      f.label :name,"チャットメンバー", html: {class: "chat-group-form__label"}
    .chat-group-form__field--right
      #chat-group-users
        #chat-group-user-22.chat-group-user.clearfix
          %p.chat-group-user__name seo_kyohei
  .chat-group-form__field.clearfix
    .chat-group-form__field--left
    .chat-group-form__field--right
      = f.submit "Save", class: "chat-group-form__action-btn", data:{disable_with: "Save"}
